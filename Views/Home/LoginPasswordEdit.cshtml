@model ZatratyCore.Models.Autorize

<div class="modal-header" style="text-align: center; background-color: #d4d7d9; border-radius:5px;">
    <h5><b> Редактирование пользователя</b></h5>
</div>
<div class="modal-body">

    @*<label>ID записи</label>*@
    <input type="hidden" class="form-control btn-block" id="IDEdit" value="@Model.Id" />

    <label>Login</label>
    <input type="text" class="form-control btn-block" id="LoginEdit" value="@Model.Login" />

    <label>Пароль</label>
    <input type="text" class="form-control btn-block" id="PasswordEdit" />

    <label>Пользователь</label>
    <input type="text" class="form-control btn-block" id="EmployeeEdit" value="@Model.Employee" />

    <label>Филиал</label>
    <select class="form-select" contenteditable="true" id="FilialLoginEdit">

        @foreach (var fil in ViewBag.fillogin)
        {
            if (fil.Id == @Model.FillialId)
            {
                <option value="@fil.Id" selected> @fil.Filial </option>
            }
            else
            {
                <option value="@fil.Id"> @fil.Filial</option>
            }
        }
    </select>

    <label>Примечание</label>
    <input type="text" class="form-control btn-block" id="PrimechanieEdit" value="@Model.Primechanie" />

    @if (Model.Admin == 1)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="AdminEdit" checked>
            <label class="form-check-label" for="flexCheckDefault">
                Является администратором
            </label>
        </div>
    }
    else
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="AdminEdit">
            <label class="form-check-label" for="flexCheckDefault">
                Является администратором
            </label>
        </div>
    }


</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-outline-primary" style="min-width:100px" onclick="LoginPasswordEditSave(0)">Сохранить</button>
    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" style="min-width:100px">Отмена</button>
</div>







