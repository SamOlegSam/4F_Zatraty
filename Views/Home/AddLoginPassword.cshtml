@model ZatratyCore.Models.Autorize

<div class="modal-header" style="text-align: center;background-color: #d4d7d9; border-radius:5px;">
    <h5> Добавление пользователя</h5>
</div>
<div class="modal-body">
    <input type="hidden" class="form-control btn-block" id="UserMod" value="@User.Identity?.Name" />

    <label>Login</label>
    <input type="text" class="form-control btn-block" id="Login" />

    <label>Пароль</label>
    <input type="text" class="form-control btn-block" id="Password" />

    <label>Пользователь</label>
    <input type="text" class="form-control btn-block" id="Employee" />

    <label>Филиал</label>
    <select class="form-select" contenteditable="true" id="FilialLogin">
        <option value="-1" selected>Выберите филиал</option>
        @foreach (var fil in ViewBag.FilialLogin)
        {
            <option value="@fil.Id"> @fil.Filial</option>
        }

    </select>


    <label>Примечание</label>
    <input type="text" class="form-control btn-block" id="Primechanie" />

    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="Admin">
        <label class="form-check-label" for="flexCheckDefault">
            Является администратором
        </label>
    </div>

</div>
<center>
    <div class="modal-footer" style="text-align:center">
        <button type="submit" class="btn btn-outline-primary" style="min-width:100px" onclick=" AddPLoginPasswordSave(0)">Сохранить</button>
        <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" style="min-width:100px">Отмена</button>

    </div>
</center>



