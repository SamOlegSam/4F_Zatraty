@model ZatratyCore.Models.Plan

<div class="modal-header" style="text-align: center; background-color: #D0EDFE; border-radius:5px;">
    <h5> Редактирование вида затрат</h5>
</div>
<div class="modal-body">

    @*<label>ID записи</label>*@
    <input type="hidden" class="form-control btn-block" id="IDEdit" value="@Model.Id" />

    <label>Наименование</label>
    
    <input type="text" class="form-control btn-block" id="NameEdit" value="@Model.Name" />

    <label>Примечание</label>
    <input type="text" class="form-control btn-block" id="PrimechanieEdit" value="@Model.Primechanie" />

</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-info" style="min-width:100px" onclick="PlanEditSave(@Model.Id)">Сохранить</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>







